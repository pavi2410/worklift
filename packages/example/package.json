{
  "name": "example",
  "private": true,
  "worklift": {
    "tasks": {
      "lint": {
        "command": "echo linting"
      },
      "build": {
        "command": "echo building",
        "depends_on": [
          "lint"
        ]
      },
      "test": {
        "command": "echo testing",
        "depends_on": [
          "build"
        ]
      },
      "deploy": {
        "command": "echo deploying",
        "depends_on": [
          "build",
          "test"
        ]
      },
      "clean": {
        "command": "echo cleaning"
      }
    }
  },
  "devDependencies": {
    "worklift": "workspace:*"
  }
}